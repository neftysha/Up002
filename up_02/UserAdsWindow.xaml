<Window x:Class="up_02.UserAdsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои объявления"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Tw Cen MT">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <DockPanel Grid.Row="0" Margin="0 0 0 16">
            <Image Source="/Resources/logo.png"
                   Height="38"
                   Margin="0 0 16 0"/>
            <TextBlock x:Name="HeaderTextBlock"
                       Text="Мои объявления"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#37474F"/>
        </DockPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0 0 0 16">
            <Button Content="Добавить"
                    Width="110" Height="30"
                    Margin="0 0 16 0"
                    Background="#FF9C1A" Foreground="White"
                    Click="AddButton_Click"/>
            <Button Content="Редактировать"
                    Width="120" Height="30"
                    Margin="0 0 16 0"
                    Click="EditButton_Click"/>
            <Button Content="Удалить"
                    Width="110" Height="30"
                    Margin="0 0 16 0"
                    Click="DeleteButton_Click"/>
            <Button Content="Завершённые"
            Width="130" Height="30"
            Margin="0 0 16 0"
            Click="CompletedButton_Click"/>
            <Button Content="Назад"
                    Width="100" Height="30"
                    Click="BackButton_Click"/>
        </StackPanel>

        <!-- Таблица объявлений -->
        <DataGrid x:Name="UserAdsGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название"
                                    Binding="{Binding Title}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Город"
                                    Binding="{Binding City.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Категория"
                                    Binding="{Binding Category.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Тип"
                                    Binding="{Binding AdType.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Статус"
                                    Binding="{Binding AdStatus.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Price}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
