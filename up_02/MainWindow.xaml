<Window x:Class="up_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервис частных объявлений"
        Height="600"
        Width="900"
        Background="White"
        FontFamily="Tw Cen MT">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0 0 0 16">
            <!-- Логотип слева -->
            <Image Source="/Resources/logo.png"
           Height="38"
           Margin="0 0 16 0"
           DockPanel.Dock="Left"/>

            <!-- Заголовок слева, с отступом от кнопок -->
            <TextBlock Text="Сервис частных объявлений"
               DockPanel.Dock="Left"
               VerticalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               Foreground="#37474F"
               Margin="0 0 32 0"/>

            <!-- Кнопки справа -->
            <StackPanel DockPanel.Dock="Right"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <Button x:Name="MyAdsButton"
                Content="Мои объявления"
                Width="130"
                Height="30"
                Margin="0 0 16 0"
                Click="MyAdsButton_Click"/>

                <Button Content="Выход"
                Width="90"
                Height="30"
                Click="ExitButton_Click"/>
            </StackPanel>
        </DockPanel>
        <!-- Панель фильтров -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0 0 0 16">

            <TextBox x:Name="KeywordTextBox"
                     Width="200"
                     Height="35"
                     Margin="0 0 16 0"
                     Padding="10"
                     Foreground="#37474F"
                     VerticalContentAlignment="Center"
                     ToolTip="Ключевые слова" />

            <ComboBox x:Name="CityComboBox"
                      Width="150"
                      Height="30"
                      Margin="0 0 16 0" />

            <ComboBox x:Name="CategoryComboBox"
                      Width="150"
                      Height="30"
                      Margin="0 0 16 0" />

            <ComboBox x:Name="TypeComboBox"
                      Width="150"
                      Height="30"
                      Margin="0 0 16 0" />

            <ComboBox x:Name="StatusComboBox"
                      Width="150"
                      Height="30"
                      Margin="0 0 16 0" />

            <Button x:Name="SearchButton"
                    Content="Найти"
                    Width="100"
                    Height="30"
                    Background="#FF9C1A"
                    Foreground="White"
                    Click="SearchButton_Click" />
        </StackPanel>

        <!-- Список объявлений -->
        <ListView x:Name="AdsListView"
                  Grid.Row="2">


            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#ECEFF1"
                            BorderThickness="1"
                            Margin="0 0 0 16"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Width="100"
                                   Height="100"
                                   Source="{Binding Image}" />

                            <StackPanel Grid.Column="1"
                                        Margin="16 0 0 0">
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#37474F" />
                                <TextBlock Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           Foreground="#78909C" />
                                <TextBlock Text="{Binding PriceText}"
                                           Margin="0 4 0 0"
                                           Foreground="#37474F" />
                                <TextBlock Text="{Binding CityName}"
                                           Foreground="#78909C" />
                                <TextBlock Text="{Binding StatusName}"
                                           Foreground="#78909C" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
