<Window x:Class="up_02.ProfitInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод суммы"
        Height="170"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White"
        FontFamily="Tw Cen MT">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Введите полученную сумму (целое неотрицательное число):"
                       TextWrapping="Wrap"
                       Margin="0 0 0 8"/>
            <TextBox x:Name="AmountTextBox"
                     Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="ОК"
                    Width="80" Height="28"
                    Margin="0 0 16 0"
                    Background="#FF9C1A" Foreground="White"
                    Click="OkButton_Click"/>
            <Button Content="Отмена"
                    Width="80" Height="28"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
