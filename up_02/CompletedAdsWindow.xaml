<Window x:Class="up_02.CompletedAdsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Завершённые объявления"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="White"
        FontFamily="Tw Cen MT">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с логотипом -->
        <DockPanel Grid.Row="0" Margin="0 0 0 16">
            <Image Source="/Resources/logo.png"
                   Height="38"
                   Margin="0 0 16 0"/>
            <TextBlock Text="Завершённые объявления пользователя"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#37474F"/>
        </DockPanel>

        <!-- Таблица завершённых объявлений -->
        <DataGrid x:Name="CompletedAdsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название"
                                    Binding="{Binding Title}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Город"
                                    Binding="{Binding City.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Категория"
                                    Binding="{Binding Category.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Тип"
                                    Binding="{Binding AdType.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Цена / прибыль"
                                    Binding="{Binding Price}"
                                    Width="*"/>
                <DataGridTextColumn Header="Дата публикации"
                    Width="*">
                    <DataGridTextColumn.Binding>
                        <Binding Path="PublishDate" StringFormat="dd.MM.yyyy"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Итоговая прибыль и кнопка Назад -->
        <DockPanel Grid.Row="2" Margin="0 16 0 0">
            <TextBlock x:Name="TotalProfitTextBlock"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#37474F"
                       Text="Общая прибыль: 0 ₽"/>

            <Button Content="Закрыть"
                    DockPanel.Dock="Right"
                    Width="100"
                    Height="30"
                    Click="CloseButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
