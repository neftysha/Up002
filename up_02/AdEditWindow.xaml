<Window x:Class="up_02.AdEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Объявление"
        Height="520"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="White"
        FontFamily="Tw Cen MT">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <DockPanel Grid.Row="0" Margin="0 0 0 16">
            <Image Source="/Resources/logo.png"
                   Height="32" Margin="0 0 16 0"/>
            <TextBlock x:Name="HeaderTextBlock"
                       Text="Объявление"
                       VerticalAlignment="Center"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#37474F"/>
        </DockPanel>

        <!-- Поля -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="0 0 8 8"/>
            <TextBox x:Name="TitleTextBox"
                     Grid.Row="0" Grid.Column="1"
                     Height="30" Margin="0 0 0 8"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Описание:" Margin="0 0 8 8"/>
            <TextBox x:Name="DescriptionTextBox"
                     Grid.Row="1" Grid.Column="1"
                     Height="80" Margin="0 0 0 8"
                     AcceptsReturn="True" TextWrapping="Wrap"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Цена:" Margin="0 0 8 8"/>
            <TextBox x:Name="PriceTextBox"
                     Grid.Row="2" Grid.Column="1"
                     Height="30" Margin="0 0 0 8"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Город:" Margin="0 0 8 8"/>
            <ComboBox x:Name="CityComboBox"
                      Grid.Row="3" Grid.Column="1"
                      Height="30" Margin="0 0 0 8"
                      DisplayMemberPath="Name"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Категория:" Margin="0 0 8 8"/>
            <ComboBox x:Name="CategoryComboBox"
                      Grid.Row="4" Grid.Column="1"
                      Height="30" Margin="0 0 0 8"
                      DisplayMemberPath="Name"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Тип:" Margin="0 0 8 8"/>
            <ComboBox x:Name="TypeComboBox"
                      Grid.Row="5" Grid.Column="1"
                      Height="30" Margin="0 0 0 8"
                      DisplayMemberPath="Name"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Статус:" Margin="0 0 8 0"/>
            <ComboBox x:Name="StatusComboBox"
                      Grid.Row="6" Grid.Column="1"
                      Height="30"
                      DisplayMemberPath="Name"/>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="Сохранить"
                    Width="110" Height="30"
                    Margin="0 0 16 0"
                    Background="#FF9C1A" Foreground="White"
                    Click="SaveButton_Click"/>
            <Button Content="Отмена"
                    Width="100" Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
